<!DOCTYPE html>
<html>
<head>
    <%include partials/header.ejs%>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%=title%></title>
</head>
<body>
<%include partials/navbar%>
<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1"><%=title%></h5>
        <div class="row">
            <!-- card loop -->
            <%for(var i=0;i<cards.length;i++) { %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><img class=" img-fluid" src="<%=cards[i].img%>" alt="card image"></p>
                                    <h4 class="card-title"><%=cards[i].name%></h4>
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><a href="<%=url+"/"+cards[i].name%>"><img class=" img-fluid" src="<%=cards[i].imgGold%>" alt="card imageGold"></a></p>
                                    <h4 class="card-title"><%cards[i].name%></h4>
                                    <a href="<%=url+"/"+cards[i].name%>" class="card-title">Detail</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
    <%include partials/buttongroup.ejs%>
</section>
<%include partials/script.ejs%>

</body>
</html>