<!DOCTYPE html>
<html>
<head>
    <%include partials/header%>
    <title>HearthStone</title>
    <link rel="stylesheet" href="/stylesheets/class.css">
</head>
<body>

<%include partials/navbar%>
<!-- classes -->
<section id="team" class="pb-5">
    <h5 class="section-title h1">PlayerClasses</h5>
    <div class="container">
        <div class="row">
            <!-- card loop -->
            <%for(var i=0;i<playerClasses.length; i++) {%>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><img class=" img-fluid" src="<%=playerClasses[i].img%>" alt="card image"></p>
                                    <h4 style="color: <%=playerClasses[i].color%>" class="card-title"><%=playerClasses[i].classname%></h4>
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <p><a href="<%="./class/"+ playerClasses[i].classname +"?pageNum=1"%>"><img class=" img-fluid" src="<%=playerClasses[i].icon%>" alt="card image"></a></p>
                                    <a style="color: <%=playerClasses[i].color%>" href="<%="./class/"+ playerClasses[i].classname +"?pageNum=1"%>"><h4 class="card-title"><%=playerClasses[i].classname%></h4></a>
                                    <p style="color: <%=playerClasses[i].color%>" class="card-text"><%=playerClasses[i].motto%></p>
                                    <p><%=playerClasses[i].intro%></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</section>

<%include partials/script%>
</body>
</html>